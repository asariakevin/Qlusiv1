<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="8dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="In  Diani , Hi" />

    <ImageView

        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"

        android:scaleType="fitCenter"
        app:srcCompat="@color/purple_500"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_weight="1"
            android:text="20 likes"
            android:id="@+id/post_number_of_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20 likes" />
        <TextView

            android:layout_weight="1"
            android:text="20 comments"
            tools:text="20 comments"
            android:id="@+id/post_number_of_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="textEnd"

            android:layout_weight="1"
            android:text="1hr ago"
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/love_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/animal"
            tools:srcCompat="@android:drawable/btn_star" />
        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>