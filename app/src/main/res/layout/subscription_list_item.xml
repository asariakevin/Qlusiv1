<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@color/design_default_color_error"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Kevin Asaria" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_for_number_of_new_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts: " />

                <TextView

                    tools:text="10"
                    android:id="@+id/actual_number_of_new_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/title_for_number_of_new_catalogues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catalogue: " />

                <TextView
                    android:id="@+id/actual_number_of_new_catalogues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_for_number_of_new_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messages: "
                    tools:text="Messages: " />

                <TextView
                    android:id="@+id/actual_number_of_new_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    tools:text="10" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>